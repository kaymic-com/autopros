<ul class="list-inline pull-right">
	<%= content_tag :li, link_to('New Request', new_request_path) if is_admin? %>
</ul>
<header class="page-header">
	<h1 class="text-center">
		Requests
	</h1>
</header>

<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
		<th>Service</th>
		<th>Date &amp; Time (EST)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= link_to request.email, "mailto:#{request.email}" %></td>
		  <td><%= request.service.name %></td>
		  <td><%= request.time.strftime("%a %b %e, %Y at %I:%M %p") %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
