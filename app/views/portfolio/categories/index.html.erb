<header class="page-header">
	<%= link_to 'New Category', new_portfolio_category_path, class: 'pull-right' if is_admin? %>
	<h1 class="text-center">Portfolio Categories</h1>
</header>

<p id="notice"><%= notice %></p>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Portfolio Items</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @portfolio_categories.each do |portfolio_category| %>
		<tr>
			<td><%= portfolio_category.name %></td>
			<td><%= portfolio_category.items.count %></td>
			<td><%= link_to 'Show', portfolio_category %></td>
			<td><%= link_to 'Edit', edit_portfolio_category_path(portfolio_category) %></td>
			<td><%= link_to 'Destroy', portfolio_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
