<div class="modal-dialog" role="document">
	<div class="modal-content">

		<header class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<%= link_to 'Edit', edit_portfolio_item_path(@portfolio_item), class: 'btn btn-xs btn-danger pull-left' if is_admin? %>
			<h4 class="modal-title text-center" id="defaultModalLabel">
				<%= @portfolio_item.title %>
			</h4>
		</header>

		<div class="modal-body">
			<p id="notice"><%= notice %></p>

			<p>
				<%= @portfolio_item.description %>
			</p>

			<%= render 'carousel', item: @portfolio_item %>

		</div>

		<%#= link_to 'Back', portfolio_items_path %>

	</div>
</div>
