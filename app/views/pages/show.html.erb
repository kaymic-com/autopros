<ul class="list-inline pull-right">
	<%= content_tag :li, link_to('Edit Page', [:edit, @page]) if is_admin? %>
</ul>
<header class="page-header">
	<h1 class="text-center">
		<%= @page.title %>
	</h1>
</header>

<p id="notice"><%= notice %></p>

<%= content_tag :div, @page.heading, class: :lead if @page.present? %>

<%= content_tag :div, @page.content.html_safe if @page.present? %>
